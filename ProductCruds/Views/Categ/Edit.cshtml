@model Category
@{
    ViewBag.Title = "Edit";
}

<h2>Yenilə</h2>

<div class="row">
    <div class="col-lg-7">
        <form method="post" action="@Url.Action("edit",new { id=Model.Id})">
            <div class="form-group">
                @Html.LabelFor(Model => Model.Name)
                <input type="text" class="form-control" name="Name" id="Name" data-validation="required length" data-validation-length="min5" value=@Model.Name data-validation-error-msg="Ad boş ola bilməz və mininum 5 simvol olmalıdır" />
                @Html.ValidationMessageFor(Model => Model.Name, "", new { @class = "text-danger" })
            </div>

            <button class="btn btn-outline-primary" type="submit">Yenilə</button>
        </form>
    </div>
</div>

